{
  "name": "dynoscale",
  "version": "0.0.4",
  "description": "Simple yet efficient scaling agent for Python apps on Heroku",
  "homepage": "https://dynoscale.net",
  "author": {
    "name": "Ondrej Dolejsi",
    "email": "ondrej.dolejsi@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fuho/dynoscale-node/issues"
  },
  "keywords": [
    "heroku",
    "scaling",
    "dyno",
    "scale",
    "scaling",
    "dynoscale",
    "horizontal scaling"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fuho/dynoscale-node"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "lint": "eslint -c .eslintrc.js",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm test && pnpm run lint",
    "preversion": "pnpm run lint",
    "version": "pnpm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-jsdoc": "^40.0.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
